<section class="form-search" style="display: none">
	<button class="form-search__button-close" data-form-search-close>
		{{ component('icon', {
			iconName: "close",
			className: "form-search__button-close-icon",
			attributes: "width='18' height='18'"
		})}}
	</button>
	<form class="form-search__form">
		<input
			class="form-search__field"
			type="search"
			name="search"
			placeholder="{{ site.search.inputPlaceholder[lang] }}"
			autocomplete="off"
		>
		<button class="form-search__button-submit">
			{{ component('icon', {
					iconName: "search",
					className: "form-search__button-submit-icon",
					attributes: "width='19' height='17'"
				})
			}}
		</button>
	</form>
</section>
