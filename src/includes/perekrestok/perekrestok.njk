					{% for item in strategicReport['perekrestok-updating'].list %}
						<li>{{ item[lang] | safe }}</li>
					{% endfor %}
				</ul>
			</div>
			<div class="col-lg-6 col-sm-12">
				<h3 class="h3 _line-b pb-lg-12 mb-lg-22">
					{{ strategicReport['perekrestok-adaptation'].title[lang] | safe }}
				</h3>
				<ul class="list text _fs-14 c-gray-menu-text">
