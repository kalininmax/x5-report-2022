						<li>{{ item[lang] | safe }}</li>
					{% endfor %}
				</ul>
			</div>
		</div>
		<div class="row mb-lg-60">
			<div class="col-lg-6 col-sm-12 mb-sm-30">
				<h3 class="h4 _line-b pb-lg-12">
					{{ strategicReport['perekrestok-assortment']['chart-1-title'][lang] | safe }}
				</h3>
				<img class="perekrestok__chart-img" src="{{ strategicReport['perekrestok-assortment']['chart-1-img'][lang] | safe }}.svg" width="536" alt="">
			</div>
			<div class="col-lg-6 col-sm-12 mb-lg-42 mb-sm-30">
				<h3 class="h4 _line-b pb-lg-12">
					{{ strategicReport['perekrestok-assortment']['chart-2-title'][lang] | safe }}
				</h3>
				<img class="perekrestok__chart-img" src="{{ strategicReport['perekrestok-assortment']['chart-2-img'][lang] | safe }}.svg" width="536" alt="">
			</div>
			<div class="col-lg-6 col-sm-12">
				<h3 class="h4 _line-b pb-lg-12 mb-lg-22">
					{{ strategicReport['perekrestok-assortment'].subtitle3[lang] | safe }}
