		<div class="row mb-lg-60">
			<div class="col-lg-6 col-sm-12 mb-sm-30">
				{{ strategicReport['perekrestok-personnel'].text1[lang] | safe }}
			</div>
			<div class="col-lg-6 col-sm-12">
				{{ strategicReport['perekrestok-personnel'].text2[lang] | safe }}
			</div>
		</div>
		<div class="perekrestok__list-card list-card mb-lg-60">
			<div class="list-card__info">
				<header class="list-card__header">
					<p class="list-card__title h3 _white">
						{{ strategicReport["perekrestok-list-card-2"].title[lang] | safe }}
