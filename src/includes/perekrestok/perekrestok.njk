						<li>{{ item[lang] | safe }}</li>
					{% endfor %}
				</ul>
			</div>
		</div>
		<div class="row">
			<div class="col-lg-6 col-sm-12 mb-sm-30">
				{{ strategicReport['perekrestok-intro'].text1[lang] | safe }}
			</div>
			<div class="col-lg-6 col-sm-12">
				{{ strategicReport['perekrestok-intro'].text2[lang] | safe }}
			</div>
		</div>
		<h3 class="h3 _line-b pb-lg-12 mb-lg-24">
			{{ strategicReport['perekrestok-personnel'].title[lang] | safe }}
